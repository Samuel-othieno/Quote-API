generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Author {
  id      Int     @id @default(autoincrement())
  name    String?
  email   String  @unique
  Quote   Quote?  @relation(fields: [quoteId], references: [id])
  quoteId Int?
}

model Quote {
  id      Int      @id @default(autoincrement())
  name    String
  authors Author[]
  YearPublished String
}